{
  "compilerOptions": {
    /* Docs: https://www.typescriptlang.org/tsconfig */
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "node",
    "types": ["node","jest"],
    "typeRoots": ["node_modules/@types/*"],
    "lib": ["es6"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": true,
    // "useUnknownInCatchVariables": false // TypeScript 4.4+ only!
  },
  "include": ["src/*.ts", "src/*.js", "src/server.ts", "src/game.ts", "src/text", "src/media"],
  "exclude": ["node_modules", "<node_internals>/**", "out", "build"]
}
